{
  "name": "node-js-test",
  "version": "1.0.0",
  "description": "Desafio TÃ©cnico - Node.js API REST para gerenciar projetos e tarefas",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "test": "jest -c config/jest.config.js",
    "test:watch": "jest -c config/jest.config.js --watch",
    "test:coverage": "jest -c config/jest.config.js --coverage",
    "lint": "eslint -c config/.eslintrc.js src/**/*.ts",
    "lint:fix": "eslint -c config/.eslintrc.js src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:seed": "sequelize-cli db:seed:all",
    "db:seed:undo": "sequelize-cli db:seed:undo:all",
    "seed:custom": "node scripts/seed_database.js",
    "docker:up": "docker-compose -f docker/docker-compose-mysql.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose-mysql.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose-mysql.yml logs -f"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "mysql",
    "sequelize",
    "redis",
    "docker",
    "api",
    "rest",
    "crud"
  ],
  "author": "Ruan Hanani",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.11.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "joi": "^18.0.1",
    "mysql2": "^3.14.5",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "sequelize-cli": "^6.6.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
